{
  "manifest_version": 2,

  "name": "ogme",
  "description": "Download the current open tab's og:image",
  "version": "0.0",
  "author": "NiceWrk, LLC",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "ogme.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "permissions": [
    "activeTab",
    "downloads",
    "tabs"
  ]

}
