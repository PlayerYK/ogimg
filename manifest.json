{
  "manifest_version": 2,

  "name": "ogme",
  "short_name": "ogme",
  "description": "Download a webpageâ€™s og:image in just two clicks",
  "version": "1.2",
  "author": "NiceWrk, LLC",

  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "ogme.html"
  },

  "icons": {
    "16": "images/og16.png",
    "24": "images/og24.png",
    "48": "images/og48.png",
    "128": "images/og128.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "permissions": [
    "activeTab",
    "downloads",
    "tabs"
  ]

}
